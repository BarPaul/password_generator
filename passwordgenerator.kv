<PasswordGenerator>:
    BoxLayout:
        width: root.width
        height: root.height
        orientation: 'vertical'

        Label:
            font_size: 70
            font_name: "Consolans"
            center_x: root.width / 2
            top: root.top - 10
            text: "Password Generator"

        TextInput:
            id: password
            font_name: "Consolans"
            background_color: (0, 1, 1, .752)
            font_size: 33 * (root.width + root.height) / 1000
            readonly: 1
            multiline: 0
            on_focus: app.on_focus()
            center_x: root.width / 2
            center_y: hint_label.center_y * 1.4
            width: abcd_button.width * 3

        Label:
            id: hint_label
            font_name: "Consolans"
            font_size: 22 * (root.width + root.height) / 1000
            center_x: root.width / 2
            center_y: slider_box.center_y * 1.25
            text: "Двигайте ползунок, чтоб получить пароль\nЧтоб скопировать пароль нажмите на него"

        BoxLayout:
            id: slider_box
            width: 3 * abcd_button.width
            height: root.width / 8
            center_x: root.width / 2
            center_y: abcd_button.height * 1.5

            Slider:
                id: password_length
                min: 4
                max: 40
                step: 1
                size_hint: .9, 1
                value: 12
                on_touch_move: app.change_text()


            Label:
                font_name: "Consolans"
                id: label_length
                size_hint: .1, 1
                font_size: 45 * (root.width + root.height) / 1000
                text: str(password_length.value)

        BoxLayout:
            width: root.width / 1.05
            center_x: root.width / 2
            height: root.width / 6
            center_y: root.width / 10


            Button:
                id: abcd_button
                font_name: "Consolans"
                background_color: (0, 1, 0, 1)
                font_size: 45 * (root.width + root.height) / 1000
                text: "Abcd"
                on_release: app.change_characters("abcd_button")

            Button:
                id: digits_button
                font_name: "Consolans"
                background_color: (0, 1, 0, 1)
                font_size: 45 * (root.width + root.height) / 1000
                text: "0123"
                on_release: app.change_characters("digits_button")

            Button:
                id: symbols_button
                background_color: (1, 0, 0, 1)
                font_name: "Consolans"
                font_size: 45 * (root.width + root.height) / 1000
                text: "{!%$"
                on_release: app.change_characters("symbols_button")
